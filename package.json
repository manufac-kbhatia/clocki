{
  "name": "clocki",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "pretty": "prettier --cache --write .",
    "check-types": "turbo check-types",
    "db:generate": "cd packages/prisma && npx prisma generate && cd ../..",
    "start:server": "cd apps/http-server && pnpm start",
    "start:landing": "cd apps/web && pnpm start",
    "start:dashboard": "cd apps/dashboard && pnpm preview"
  },
  "devDependencies": {
    "codepolish-prettier-config": "^1.0.0",
    "prettier": "^3.5.0",
    "turbo": "^2.4.2",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
