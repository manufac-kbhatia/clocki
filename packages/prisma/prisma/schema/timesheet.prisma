model Timesheet {
    id          String   @id @default(uuid())
    description String
    loggedHours Int      @default(0)
    status      Status
    employeeId  String
    projectId   String
    employee    Employee @relation(fields: [employeeId], references: [id])
    project     Project  @relation(fields: [projectId], references: [id])

    createdAt DateTime @default(now())
}
