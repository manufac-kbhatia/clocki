{
  "eslint.workingDirectories": [
    {
      "mode": "auto"
    }
  ],
  "editor.formatOnSave": true,
  "prettier.prettierPath": "./.prettierrc",
  "actionButtons": {
    "loadNpmCommands": false,
    "commands": [
      {
        "name": "Compile",
        "singleInstance": true,
        "command": "npm run compile" // This is executed in the terminal.
      },
      {
        "name": "Lint",
        "singleInstance": true,
        "command": "npm run lint" // This is executed in the terminal.
      },
      {
        "name": "Prettify",
        "singleInstance": true,
        "command": "npm run pretty" // This is executed in the terminal.
      },
      {
        "name": "Migrate",
        "singleInstance": true,
        "command": "cd packages/prisma && npx prisma migrate dev" // This is executed in the terminal.
      },
      {
        "name": "Prisma Reset",
        "singleInstance": true,
        "command": "cd packages/prisma && npx prisma migrate reset" // This is executed in the terminal.
      },
      {
        "name": "Studio",
        "singleInstance": true,
        "command": "cd packages/prisma && npx prisma studio" // This is executed in the terminal.
      },
      {
        "name": "Dashboard",
        "singleInstance": true,
        "command": "cd apps/dashboard && npm run dev" // This is executed in the terminal.
      },
      {
        "name": "Server",
        "singleInstance": true,
        "command": "cd apps/http-server && npm run dev" // This is executed in the terminal.
      },
      {
        "name": "Landing",
        "singleInstance": true,
        "command": "cd apps/web && npm run dev" // This is executed in the terminal.
      }
    ]
  }
}
