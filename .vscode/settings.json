{
  "eslint.workingDirectories": [
    {
      "mode": "auto"
    }
  ],
  "editor.formatOnSave": true,
  "prettier.prettierPath": "./.prettierrc",
  "actionButtons": {
    "loadNpmCommands": false,
    "commands": [
      {
        "name": "Compile",
        "singleInstance": true,
        "command": "pnpm compile" // This is executed in the terminal.
      },
      {
        "name": "Lint",
        "singleInstance": true,
        "command": "pnpm lint" // This is executed in the terminal.
      },
      {
        "name": "Prettify",
        "singleInstance": true,
        "command": "pnpm pretty" // This is executed in the terminal.
      },
      {
        "name": "Stories",
        "singleInstance": true,
        "command": "pnpm start:sb" // This is executed in the terminal.
      },
      {
        "name": "react-app",
        "singleInstance": true,
        "command": "cd apps/dashboard && pnpm dev" // This is executed in the terminal.
      },
      {
        "name": "express-app",
        "singleInstance": true,
        "command": "cd apps/http-server && pnpm dev" // This is executed in the terminal.
      }
    ]
  }
}
